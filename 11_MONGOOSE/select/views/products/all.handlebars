<h1>Todos os Produtos</h1>

<div class="products">
    {{#each products}}
        <div class="product">
            <img src="{{this.image}}" alt="imagem {{this.name}}">
            <h3>{{this.name}}</h3>
            <h5>{{this.description}}</h5>
            <p>R$ {{this.price}}</p>
            <div class="actions">
                <a href="/products/{{this._id}}">Detalhes</a>
                <a href="/products/edit/{{this._id}}">Editar</a>
            </div>
        </div>
    {{/each}}
</div>